{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.ghast_x": {
      "arrays": {
        "textures": {
          "Array.skins": [
            "Texture.default",
            "Texture.shooting"
          ]
        }
      },
      "geometry": "Geometry.default",
      "materials": [
        {
          "*": "Material.default"
        }
      ],
      "textures": [
        "Array.skins[variable.ischarging]"
      ],
      "overlay_color": {
        "r": "(variable.Avar>0 ? 1.0 : -1.0)",
        "g": "(variable.Avar>0 ? 1.0 : -1.0)",
        "b": "(variable.Avar>0 ? 1.0 : -1.0)",
        "a": "math.abs(variable.Avar)/20*0.15"
      }
    }
  }
}